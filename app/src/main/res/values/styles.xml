<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
    </style>

<!--    custom font 적용-->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>
    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>



    <style name="SettingTextView"  parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/font_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="TimePickerButton" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:background">@drawable/time_picker_background</item>
        <item name="android:text">12:00</item>
        <item name="android:textSize">27sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TimeEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:ems">7</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">0</item>

        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:numbersBackgroundColor">@color/colorPrimaryLight</item>
        <item name="android:numbersSelectorColor">@color/colorAccent</item>
        <item name="android:headerBackground">@color/colorPrimary</item>

        <item name="android:timePickerMode">spinner</item>
    </style>

<!--    CalendarFragment-->
<!--    요일 텍스트-->
    <style name="MondayTextView"  parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    요일 버튼-->
    <style name="DayButton"  parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_button_background</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
<!--    캘린더 하단 리스트 아이템 텍스트-->
    <style name="SmallItemListText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
<!--    동그란 색깔 버튼-->
    <style name="PlaceButton"  parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:fontFamily">@font/font_extra_bold</item>
        <item name="android:background">@drawable/place_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
<!--    toolbar title-->
    <style name="ToolbarTitleText"  parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/font_extra_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

<!--    line-->
    <style name="lineView" parent="@android:style/Widget">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="TopConfirmText"  parent="@android:style/Widget.TextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:text">@string/addPlace_confirm</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_gravity">end</item>
    </style>

</resources>